<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login2"
    tools:context=".activity_login">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/applogo2"
        />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittext"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@android:color/background_light"
        android:textSize="17sp"
        />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittext"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@android:color/background_light"
        android:textSize="17sp"
        />

<LinearLayout
    android:id="@+id/linear_Layout_1"
    android:layout_below="@+id/login_password"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rey.material.widget.CheckBox
        android:id="@+id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Material.Drawable.CheckBox"
        android:text="Remember me"
        app:cbd_strokeColor="@android:color/background_dark"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_marginLeft="17dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password"
        android:text="Forget Password"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="80dp"/>

</LinearLayout>

    <Button
        android:id="@+id/login_btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="13dp"
        android:layout_below="@+id/linear_Layout_1"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:text="Login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_admin_panel"
        android:text=" Not a Seller"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:layout_below="@+id/login_btn_2"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:visibility="invisible"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_panel"
        android:text="Seller?"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light"
        android:textSize="13sp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="23dp"
        android:layout_below="@+id/login_btn_2"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>